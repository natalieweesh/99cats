<form action="<%=cat_path%>" method="post">
<input type="hidden" name="_method" value="put">

<label>Name<input type="text" name="cat[name]" value="<%=@cat.name %>"></label>

<label>Age<input type="text" name="cat[age]" value="<%=@cat.age %>"></label>

<label>Sex<input type="text" name="cat[sex]" value="<%=@cat.sex %>"></label>

<input type="hidden" name="cat[user_id]" value="<%=
  User.find_by_token(session[:token]).id
%>">

<label>Birth Date
<input type="date" name="cat[birth_date]" id="cat_birth_date" value="<%=@cat.birth_date %>"></label>

<label>Color
<select name="cat[color]" value="<%= @cat.color%>">
  <option value="Infrared">Infrared</option>
  <option value="Red">Red</option>
  <option value="Orange">Orange</option>
  <option value="Yellow">Yellow</option>
  <option value="Green">Green</option>
  <option value="Blue">Blue</option>
  <option value="Indigo">Indigo</option>
  <option value="Violet">Violet</option>
  <option value="Ultraviolet">Ultraviolet</option>
</select>
</label>

<input type="hidden"
         name="authenticity_token"
         value="<%= form_authenticity_token %>">

<input type="submit" value="submit">

</form>